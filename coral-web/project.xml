<?xml version="1.0" encoding="ISO-8859-2"?>
<project>
  <pomVersion>3</pomVersion>
  <extend>${coralCommon}/project.xml</extend>

  <name>Coral web</name>
  <id>coral-web</id>
  <groupId>coral</groupId>
  <currentVersion>0.1.1</currentVersion>
  <shortDescription>
    Coral Web contains a number of extensions to the ObjectLedge Web table tookit, that
    allow easy creation rich dynamic interfaces on top of Coral resource model.
  </shortDescription>
  
  <dependencies>
    <dependency>
      <id>servletapi</id>
      <version>2.3</version>
      <url>http://jakarta.apache.org/builds/jakarta-servletapi/</url>
    </dependency>

    <dependency>
      <groupId>coral</groupId>
      <artifactId>coral-api</artifactId>
      <version>0.1.1</version>
      <url>http://coral.objectledge.org/modules/coral-api/</url>
    </dependency>
    <dependency>
      <groupId>coral</groupId>
      <artifactId>coral-ri</artifactId>
      <version>0.1.1</version>
      <url>http://coral.objectledge.org/modules/coral-ri/</url>
    </dependency>    
    <dependency>
      <groupId>coral</groupId>
      <artifactId>coral-datatypes</artifactId>
      <version>0.1.1</version>
      <url>http://coral.objectledge.org/modules/coral-datatypes/</url>
    </dependency>    
    <dependency>
      <groupId>coral</groupId>
      <artifactId>coral-maven-plugin</artifactId>
      <type>plugin</type>
      <version>0.1.1</version>
      <url>http://coral.objectledge.org/modules/coral-maven-plugin/</url>
    </dependency>        
    
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-api</artifactId>
      <version>1.1-rc2</version>
      <url>http://dna.codehaus.org</url>
    </dependency>
    <dependency>
      <groupId>dna</groupId>
      <artifactId>dna-impl</artifactId>
      <version>1.1-rc2</version>
      <url>http://dna.codehaus.org</url>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.8</version>
      <url>http://logging.apache.org/log4j/docs/</url>
    </dependency>
    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-components</artifactId>
      <version>0.3.1</version>
    </dependency>
    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-container</artifactId>
      <version>0.3.1</version>
    </dependency>
    <dependency>
      <groupId>objectledge</groupId>
      <artifactId>ledge-web</artifactId>
      <version>0.3.1</version>
    </dependency>
    <dependency>
      <groupId>nanocontainer</groupId>
      <artifactId>nanocontainer</artifactId>
      <version>1.0-beta-1.pico-1.1</version>
      <url>http://nanocontainer.org/</url>
    </dependency>
    <dependency>
      <groupId>picocontainer</groupId>
      <artifactId>picocontainer</artifactId>
      <version>1.1</version>
       <url>http://picocontainer.org/</url>
    </dependency>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <version>3.0</version>
      <version>3.0</version>
      <url>http://jakarta.apache.org./commons/collections</url>
    </dependency>
    <dependency>
      <id>velocity</id>
      <version>1.5-dev-20050406</version>
      <url>http://jakarta.apache.org/velocity</url>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
  </build>
</project>  