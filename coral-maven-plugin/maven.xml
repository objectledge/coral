<project xmlns:j="jelly:core"
         xmlns:m="jelly:maven"
         xmlns:p="plugin"
         xmlns:a="artifact">
         
  <goal name="plugin:testPluginFeatures">
    <m:reactor 
      basedir="${basedir}/src/test/project"
      includes="*/project.xml"
      goals="clean,plugin:testPluginFeature"
      ignoreFailures="false"/>
  </goal>
  
  <goal name="plugin:installInMaven">
    <p:uninstall name="${pom.artifactId}" />
    <copy file="${maven.build.dir}/${maven.final.name}.jar"
      todir="${maven.plugin.dir}" />
    <m:uninstallPlugin artifactId="${pom.artifactId}" />
    <m:installPlugin file="${maven.build.dir}/${maven.final.name}.jar" cache="true" />
    <j:if test="${context.getVariable('maven.test.skip') != 'true'}">
      <attainGoal name="plugin:testPluginFeatures"/>
    </j:if>
  </goal>

  <goal name="plugin:install" prereqs="plugin:plugin">
    <a:install
      artifact="${maven.build.dir}/${maven.final.name}.jar"
      type="plugin"
      project="${pom}"
    />
    <attainGoal name="plugin:installInMaven"/>
  </goal>

</project>
